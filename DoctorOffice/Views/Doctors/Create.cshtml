@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Doctor

<h1>ADD NEW DOCTOR</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  <br>
  <input type="submit" class="btn-block" value="ADD DOCTOR" />
}
@Html.ActionLink("RETURN TO ALL DOCTORS", "Index", "Doctors",  null, new { @class = "btn-block" })