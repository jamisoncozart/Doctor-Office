@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Doctor

<h1>EDIT DETAILS FOR: @Html.DisplayFor(model => model.Name)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DoctorId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)
  <br>
  <input type="submit" class="btn-block" value="SAVE" />
}

@Html.ActionLink("SHOW ALL DOCTORS", "Index", "Doctors", null, new { @class = "btn-block" })
